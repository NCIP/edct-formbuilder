        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
-->

	<!-- *********** OTHER ***************** -->

	<welcome-file-list>
		<welcome-file>home</welcome-file>
		<!--  welcome-file>/moduleList.view</welcome-file -->		
	</welcome-file-list>
	
</web-app>
